{
    "install": "npm install",
    "start": "npm start",
    "watch": {
        "ignore": [
            "\\.git",
            "node_modules",
            "uploads"
        ],
        "install": {
            "include": [
                "^package\\.json$",
                "^\\.env$"
            ]
        },
        "restart": {
            "exclude": [
                "^public/",
                "^dist/"
            ],
            "include": [
                "\\.js$",
                "\\.json"
            ]
        },
        "throttle": 900000
    }
}